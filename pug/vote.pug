    script(type='text/javascript').
      $(() => {
        $('#logo').on('click', () => {
          const details = $(`#details`)
          details.removeClass('show')
          details.addClass('hide')
        })
        $('#carouselExampleControls').on('slide.bs.carousel', () => {
          $('article').scrollTop(0)
        })
      })
        
      function showPop (n) {
        const details = $(`#details`)
        const carousel = $('#carouselExampleControls')
        $('article').scrollTop(0)
        carousel.carousel(Number(n)-1)
        details.removeClass('hide')
        details.addClass('show')
      }

      function closePop () {
        const pops = document.getElementsByClassName(`votePop`)
        Array.prototype.forEach.call(pops, (pop) => {
          console.log(pop)
          pop.classList.remove('show')
          pop.classList.add('hide')
        })
      }
