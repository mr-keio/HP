mixin title (title)
  .title
    .logo
      .d-md-none
        svg(viewBox='0 0 30 20')
          polygon(
            points="0 0, 25 0, 25 6, 0 6, 0 0"
            fill="#C63527"
          )
          polygon(
            points="0 7, 25 7, 25 13, 0 13, 0 0"
            fill="#001e62"
          )
          polygon(
            points="0 14, 25 14 , 25 20, 0 20, 0 0"
            fill="#C63527"
          )
      .d-none.d-md-block
        svg(viewBox='0 0 310 50')
          polygon(
            points="0 0, 300 0, 300 16, 0 16, 0 0"
            fill="#C63527"
          )
          polygon(
            points="0 17, 300 17, 300 33, 0 33, 0 0"
            fill="#001e62"
          )
          polygon(
            points="0 34, 300 34, 300 50, 0 50, 0 0"
            fill="#C63527"
          )
        
    .text
      h1(id=title.toLowerCase()) #{title}

mixin sub_title (sub_title)
  .sub_title
    h2 #{sub_title}
      br
      span.under_line #{sub_title}
