
mixin body (num)
  header
      #logo
        svg(x=0 y=0 viewBox='0 0 200 360')
          polygon(
            points="0 0,0 160, 30 160, 30 80, 100 160, 170 80, 170 160, 200 160, 200 0, 100 120"
            fill="#001e62"
          )
          polygon(
            points="0 190, 0 220, 200 220, 200 190"
            fill='#001e62'
          )
          polygon(
            points="0 250, 0 280, 200 280, 200 250"
            fill='#C63527'
          )
          polygon(
            points="0 310, 0 340, 200 340, 200 310"
            fill='#001e62'
          )
      p Mr.KEIO CONTENST 2019
  main.container-fluid.no-gutters
    article.row
      .top.col-12.col-sm-12.col-md-12.col-lg-6.col-xl-6
        h2.gray
          span |
          | Entry No.#{num}
        img(src=`../assets/candidates/contents/top/no${num}.png`, alt="")
      .info.col-12.col-sm-12.col-md-12.col-lg-6.col-xl-6
        .row.no-gutters
          .sns.col-6.col-sm-6.col-md-6.col-lg-6.col-xl-6
            .container-fluid
              .row.no-gutters
                .links.twitter.col-6.col-sm-6.col-md-6.col-lg-6.col-xl-6
                  a(href=`http://twitter.com/mrkeio_2019_no${num}`)
                    img(src='../assets/twitter_Logo.png', alt="")
                .links.instagram.col-6.col-sm-6.col-md-6.col-lg-6.col-xl-6
                  a(href=`http://instagram.com/mrkeio_2019_no${num}`)
                    img(src='../assets/instagram_logo.png', alt="")
          .vote.col-6.col-sm-6.col-md-6.col-lg-6.col-xl-6
            button(type="button" class="btn btn-primary")
              p 投票
        .aboutMe.row.no-gutters
          .info.col-12.col-sm-12.col-md-12.col-lg-12.col-xl-12
            table
              - for (var j = 0; j < candidates[num-1].aboutMe.length; j++)
                tr
                  td.tar.ex_small.col-5.col-sm-5.col-md-5.col-lg-6.col-xl-6 #{candidates[num-1].aboutMe[j].split('：')[0]}
                  td.ex_small.col-7.col-sm-7.col-md-7.col-lg-6.col-xl-6 #{candidates[num-1].aboutMe[j].split('：')[1]}
      .contents.row
          - for (var i = 0; i < 4; i++)
            .content.col-12.col-sm-12.col-md-12.col-lg-6.col-xl-3
              img(src=`../assets/candidates/contents/no${num}/${i+1}.jpg`, alt="")


